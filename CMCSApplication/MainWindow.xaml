<Window x:Class="CMCSApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMCS Dashboard" Height="450" Width="800">
    <Grid>
        <!-- Define a DockPanel for the layout -->
        <DockPanel>
            <!-- Menu for navigation -->
            <StackPanel DockPanel.Dock="Left" Width="150" Background="LightGray">
                <Button Content="Home" Click="HomeButton_Click" Margin="10" Height="40"/>
                <Button Content="Claims" Click="ClaimsButton_Click" Margin="10" Height="40"/>
                <Button Content="Lecturers" Click="LecturersButton_Click" Margin="10" Height="40"/>
                <Button Content="Staff" Click="StaffButton_Click" Margin="10" Height="40"/>
            </StackPanel>
            <!-- Content area where pages will be shown -->
            <ContentControl x:Name="MainContentControl" />
        </DockPanel>
    </Grid>
</Window>
