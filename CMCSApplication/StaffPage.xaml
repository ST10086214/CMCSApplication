<UserControl x:Class="CMCSApplication.StaffPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="600">
    <Grid Margin="10" Background="white">
        <StackPanel>
            <TextBlock Text="Staff Management" FontSize="20" Margin="0,0,0,20" />

            <TextBlock Text="Staff Name:" />
            <TextBox x:Name="txtStaffName" Width="200" Margin="0,5,0,10" />

            <TextBlock Text="Position:" />
            <TextBox x:Name="txtStaffPosition" Width="200" Margin="0,5,0,10" />

            <Button x:Name="btnAddStaff" Content="Add Staff" Width="200" Margin="0,20,0,0" Click="AddStaff_Click" />
        </StackPanel>
    </Grid>
</UserControl>
